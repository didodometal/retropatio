<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="default" >
		<class>br.com.retropatio.entity.Armador</class>
		<class>br.com.retropatio.entity.Caminhao</class>
		<class>br.com.retropatio.entity.Container</class>
		<class>br.com.retropatio.entity.Empresa</class>
		<class>br.com.retropatio.entity.Entrada</class>
		<class>br.com.retropatio.architecture.Failure</class>
		<class>br.com.retropatio.entity.Logs</class>
		<class>br.com.retropatio.entity.MarcaCaminhao</class>
		<class>br.com.retropatio.entity.ModeloCaminhao</class>
		<class>br.com.retropatio.entity.ModeloContainer</class>
		<class>br.com.retropatio.entity.Motorista</class>
		<class>br.com.retropatio.entity.Perfil</class>
		<class>br.com.retropatio.entity.Pessoa</class>
		<class>br.com.retropatio.entity.Quadra</class>
		<class>br.com.retropatio.entity.Saida</class>
		<class>br.com.retropatio.entity.TamanhoContainer</class>
		<class>br.com.retropatio.entity.Usuario</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/propatio"/>
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>



